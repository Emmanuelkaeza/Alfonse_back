# Configuration de l'application
PORT=3000
NODE_ENV=development

# Configuration de la base de données
DATABASE_PATH=database.sqlite

# Configuration JWT (CHANGEZ CES VALEURS EN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-please-change-this
JWT_EXPIRES_IN=7d

# Configuration CinetPay
CINETPAY_API_KEY=your-cinetpay-api-key
CINETPAY_SITE_ID=your-cinetpay-site-id
CINETPAY_BASE_URL=https://api-checkout.cinetpay.com

# Configuration CORS (ajoutez vos domaines frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Configuration de sécurité
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# Configuration de base de données (Production)
DB_SYNCHRONIZE=false
DB_LOGGING=false
